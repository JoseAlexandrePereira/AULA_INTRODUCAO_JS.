// Aula introdutória a JavaScript. Aula de repetição e utilização do while(condição){} e for( ; ; ){}.


-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// teste_1:

var t = 1
while (t <= 10000){
console.log(`Passo ${t}`)
t++

}

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// teste_2:

var t = 1
do {
console.log(`Passo ${t}`)
t++

}while (t <= 6)

-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// teste_3(utilizando for):

console.log('Vai começar...')

for ( var c = 1; c <= 5 ;c++ ) {
    console.log(c)
}

console.log('FIM!')














