    color: white;
    text-align: center;
    font-style: italic;

}


---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

//JavaScript: 

function verificar(){
    var data = new Date()
    var ano = data.getFullYear()
    var fano = document.getElementById('txtano')
    var res = document.querySelector('div#res')

        if(fano.value.length == 0 || Number (fano.value) > ano) {
            window.alert('[ERRO] Verifique os dados e teste novamente!')
        }else{
            var fsex = document.getElementsByName('radsex')
            var idade = ano - Number(fano.value)
            var gênero = ''
            var img = document.createElement('img')
            img.setAttribute('id', 'foto')
            if (fsex[0].checked) {
                gênero = 'Homem'

                if(idade >= 0 && idade < 10){
                    // Criança
                    img.setAttribute('src', 'anao_crianca.png')
                }else if (idade < 21) {
                    // jovem
                    img.setAttribute('src', 'chico.png')
                }else if (idade < 50) {
                    // Adulto
                    img.setAttribute('src', 'comprar_alimento.png')
                }else{
                    //idoso
                    img.setAttribute('src', 'tiringa.png')
                }


            } else if (fsex[1].checked){
                gênero = 'Mulher'

                if(idade >= 0 && idade < 10){
                    // Criança
                    img.setAttribute('src', 'meninanova.png')
                }else if (idade <= 21) {
                    // jovem
                    img.setAttribute('src', 'jovemmenina.png')
                }else if (idade < 50) {
                    // Adulto
                    img.setAttribute('src', 'ezatamenthy.png')
                }else{
                    //idoso
                    img.setAttribute('src', 'velhamandrake.png')
                }
            }
            res.style.textAlign = 'center'
            res.innerHTML = `Detectamos ${gênero} com ${idade} anos.`
            res.appendChild(img)
        }
}


