//Aula introdutória a JavaScript. Utilizando funções.



---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//ex01.js: 

function parimp(n){

if (n%2==0){

    return 'PAR'

} else {

return 'ÍMPAR'

}

}

console.log(parimp (11))

---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//ex02.js:

function soma(n1=0, n2=0){
    return n1 + n2

}

console.log(soma(7, 3))

---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//ex03.js:

function fatorial(n){

    let fat=1
    
    for(let c = n; c>1; c--){
        fat *= c

    }
return fat
}

console.log(fatorial(5))

---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
// ex04.js(recursivo):

//RECURSIVIDADE

function fatorial(n) {

if(n == 1){
    return 1
} else {
    return n * fatorial(n-1)
}

}
console.log(fatorial(5))

